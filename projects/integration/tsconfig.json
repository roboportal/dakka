{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",                                    
    "jsxImportSource": "@emotion/react",                
    "module": "CommonJS",                                
    "moduleResolution": "node",                                                          
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,                       
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}