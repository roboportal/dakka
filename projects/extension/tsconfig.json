{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",                                    
    "jsxImportSource": "@emotion/react",                
    "module": "CommonJS",                                
    "moduleResolution": "node",                       
    "baseUrl": "./",                                
    "paths": {
      "@/components/*": ["./src/panel/components/*"],
      "@/hooks/*": ["./src/panel/hooks/*"],
      "@/store/*": ["./src/panel/store/*"],  
    },                                     
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,                       
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "packages",
    "projects/test"
  ],
  "include": [
    ".",
    "../../packages/exportProcessors/**/*"
  ]
}